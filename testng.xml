<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite">
	<!--Parametro de suite que puede ser usado por todos los test -->
	<parameter name="URL" value="https://www.google.com" />

	<test name="Test on Chrome">
	<!--Parametro de test que puede ser usado por todos las clases de este test -->
		<parameter name="BrowserType" value="Chrome"></parameter>
		<classes>
			<class name="com.qualitystream.testng.CrossBrowserTesting" />
		</classes>
	</test> <!-- Test -->

	<test name="Test on Firefox">
		<parameter name="BrowserType" value="Firefox"></parameter>
		<classes>
			<class name="com.qualitystream.testng.CrossBrowserTesting" />
		</classes>
	</test> <!-- Test -->

	<test name="Test on Microsoft Edge">
		<parameter name="BrowserType" value="Microsoft Edge"></parameter>
		<classes>
			<class name="com.qualitystream.testng.CrossBrowserTesting" />
		</classes>
	</test> <!-- Test -->
	
</suite> <!-- Suite -->